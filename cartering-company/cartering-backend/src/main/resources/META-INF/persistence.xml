    <!-- second, JTA based persistence unit -->
    <persistence-unit name="carteringPu" transaction-type="JTA">

        <!-- the JNDI name of the data source for this persistence unit -->
        <!-- it's defined in a "-ds.xml" file next to this one -->
        <jta-data-source>java:jboss/datasources/carteringDS</jta-data-source>

        <!-- list of classes we want to manage with JPA -->
        <class>edu.ubb.cartering.backend.model.Food</class>
        <class>edu.ubb.cartering.backend.model.Menu</class>
        <class>edu.ubb.cartering.backend.model.MenuOrder</class>
        <class>edu.ubb.cartering.backend.model.State</class>
        <class>edu.ubb.cartering.backend.model.User</class>

        <!-- only custom configs of jpa -->
        <properties>
            <property name="hibernate.show_sql" value="true"/>
             <property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
        </properties>

    </persistence-unit>
</persistence>
